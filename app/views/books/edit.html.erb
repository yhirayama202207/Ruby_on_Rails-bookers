<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h2>Title</h2>
  <%= f.text_field :title %>
  
  <h2>Body</h2>
  <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Update Book' %>
  
  <br>
  
  <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", books_path %>
  
  <br>
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Delete", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  
<% end %>