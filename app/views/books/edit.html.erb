<h1>ここはBookers Edit</h1>

<h1>Editing Book</h1>

<%= form_with model: @book, url: update_list_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  #リンクを挿入
  Show | Back
  
  <%= link_to "編集", edit_list_path(@book.id) %>
  
<% end %>